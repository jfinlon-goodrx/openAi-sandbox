@page "/"
@rendermode InteractiveServer

<PageTitle>Requirements Assistant - Home</PageTitle>

<div class="container mt-4">
    <h1>Requirements Processing Assistant</h1>
    <p class="lead">Upload and process requirements documents to generate summaries, user stories, and answer questions.</p>
    
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Summarize Documents</h5>
                    <p class="card-text">Upload requirements documents and get concise summaries of key requirements.</p>
                    <a href="/summarize" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Generate User Stories</h5>
                    <p class="card-text">Automatically generate user stories with acceptance criteria from requirements.</p>
                    <a href="/user-stories" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ask Questions</h5>
                    <p class="card-text">Ask questions about your requirements documents and get instant answers.</p>
                    <a href="/ask" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</div>
