{
  "info": {
    "name": "OpenAI Platform Learning Portfolio - API Examples",
    "description": "REST API examples for OpenAI Platform Learning Portfolio projects",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "openai_api_key",
      "value": "YOUR_OPENAI_API_KEY",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Direct OpenAI APIs",
      "item": [
        {
          "name": "Chat Completion - Summarize",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{openai_api_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"gpt-4-turbo-preview\",\n  \"messages\": [\n    {\n      \"role\": \"system\",\n      \"content\": \"You are an expert business analyst.\"\n    },\n    {\n      \"role\": \"user\",\n      \"content\": \"Summarize this requirements document: The system must allow users to login securely using multi-factor authentication.\"\n    }\n  ],\n  \"temperature\": 0.3,\n  \"max_tokens\": 500\n}"
            },
            "url": {
              "raw": "https://api.openai.com/v1/chat/completions",
              "protocol": "https",
              "host": ["api", "openai", "com"],
              "path": ["v1", "chat", "completions"]
            }
          }
        },
        {
          "name": "Moderation API",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{openai_api_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"input\": \"This is a test message to check for inappropriate content.\"\n}"
            },
            "url": {
              "raw": "https://api.openai.com/v1/moderations",
              "protocol": "https",
              "host": ["api", "openai", "com"],
              "path": ["v1", "moderations"]
            }
          }
        },
        {
          "name": "Embeddings",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{openai_api_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"text-embedding-ada-002\",\n  \"input\": \"Patient education: Metformin is used to treat type 2 diabetes.\"\n}"
            },
            "url": {
              "raw": "https://api.openai.com/v1/embeddings",
              "protocol": "https",
              "host": ["api", "openai", "com"],
              "path": ["v1", "embeddings"]
            }
          }
        }
      ]
    },
